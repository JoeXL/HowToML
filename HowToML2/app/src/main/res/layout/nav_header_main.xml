<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/nav_header_height"
    android:background="#ff6600"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark" android:orientation="horizontal"
    android:gravity="bottom">

    <!--Put images in here after Vish has put them on dropbox -->


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/HowToMLHeaderLink"
        android:src="@drawable/header_green"
        android:contentDescription="HowToMLLogo"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/htmlHeaderLink"
        android:src="@drawable/button_html"
        android:contentDescription="@string/html_HeaderLink"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/HowToMLHeaderLink"
        android:scaleType="fitXY" />

</RelativeLayout>
