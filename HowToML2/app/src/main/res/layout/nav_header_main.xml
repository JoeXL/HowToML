<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#0d9445"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="horizontal"
    android:gravity="bottom"
    android:id="@+id/nav_header" >

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/HowToMLHeaderLink"
        android:background="@drawable/header_green"
        android:contentDescription="@string/howToML"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:focusableInTouchMode="false"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:theme="@android:style/Holo.ButtonBar" />

    <ImageButton
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:id="@+id/htmlHeaderLink"
        android:background="@drawable/button_html"
        android:contentDescription="@string/html_HeaderLink"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:theme="@android:style/Holo.ButtonBar"
        android:layout_below="@+id/HowToMLHeaderLink"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
